{
  "name": "@line/bot-sdk",
  "version": "__LINE_BOT_SDK_NODEJS_VERSION__",
  "description": "Node.js SDK for LINE Messaging API",
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/index.js",
  "types": "./module/index.d.ts",
  "scripts": {
    "pretest": "npm run format && npm run build",
    "test": "TEST_PORT=1234 TS_NODE_CACHE=0 mocha --exit",
    "covtest": "TEST_PORT=1234 TS_NODE_CACHE=0 nyc mocha --exit",
    "prettier": "prettier \"{lib,test}/**/*.ts\"",
    "format": "npm run prettier -- --write",
    "format:check": "npm run prettier -- -l",
    "clean": "git clean -fx lib/ module/",
    "prebuild": "npm run format:check && npm run clean",
    "build": "tsc -p . && tsc -p ./tsconfig.cjs.json && tsconfig-to-dual-package",
    "docs": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "./scripts/deploy-docs.sh",
    "apidocs": "typedoc --excludePrivate --plugin typedoc-plugin-markdown --out docs/apidocs lib/index.ts",
    "generate-changelog": "ts-node ./scripts/generate-changelog.ts",
    "release": "npm run build && npm publish --access public",
    "watch": "tsc -p . --watch",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:line/line-bot-sdk-nodejs.git"
  },
  "keywords": [
    "node",
    "line",
    "sdk"
  ],
  "optionalDependencies": {
    "axios": "^1.0.0"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/finalhandler": "1.2.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.30",
    "express": "4.18.3",
    "finalhandler": "1.2.0",
    "husky": "9.0.11",
    "mocha": "^10.3.0",
    "msw": "2.2.8",
    "nyc": "15.1.0",
    "prettier": "3.2.5",
    "ts-node": "^10.9.2",
    "ts-node-test-register": "^10.0.0",
    "tsconfig-to-dual-package": "^1.2.0",
    "typedoc": "^0.25.1",
    "typedoc-plugin-markdown": "^3.16.0",
    "typescript": "^5.4.2",
    "vuepress": "^2.0.0-beta.67"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:check",
      "pre-push": "npm run format:check && npm run build && npm run test"
    }
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "mocha": {
    "require": "ts-node/register",
    "spec": [
      "test/**/*.spec.ts",
      "lib/**/tests/**/*.spec.ts"
    ]
  },
  "license": "Apache-2.0",
  "type": "module",
  "module": "./module/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./module/index.d.ts",
        "default": "./module/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "./dist/",
    "./bin/",
    "./module/",
    "./lib/"
  ],
  "packageManager": "npm@9.5.1"
}

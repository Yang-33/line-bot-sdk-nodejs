{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDirs": [
      "lib",
      "test"
    ],
    "declaration": true,
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.js",
    "lib/**/*.cjs",
    "lib/**/*.mjs",
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}
